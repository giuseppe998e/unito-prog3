            <Label text="Status: "/>
            <Label fx:id="clientStatusLabel" style="-fx-font-weight: bold;" text="STATUS"/>
        </HBox>
        <Circle fx:id="serverStatusCircle" radius="6.0" AnchorPane.bottomAnchor="4.0" AnchorPane.rightAnchor="5.0"/>
    </AnchorPane>
</AnchorPane>